{{#if myProducts.length}}
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        {{#each myProducts}}
        <div class="col">
          <div class="card shadow-sm">
            <img src='{{image}}' alt="">
            <div class="card-body">
              <p class="card-text fs-5 fw-bold">{{title}}</p>
              <p class="card-text">{{description}}</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex gap-2 align-items-center">
                <div class="avatar bg-primary fw-semibold">
                    <p>{{getFullNameFirstCharacter user.firstName user.lastName}}</p>
                </div>
                <p class="m-0 p-0">{{user.firstName}} {{user.lastName}}</p>

                </div>
                 <small class="text-muted fs-5">{{price}}.00$</small>
              </div>
            </div>
{{!-- 
            <div class="card-footer">
                <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">

                <button type="button" class="btn btn-outline-primary">Details</button>
                {{#if @root.token}}
                {{#ifequal @root.userID user}}
                <button type="button" class="btn btn-outline-secondary">Edit</button>
                <button type="button" class="btn btn-outline-danger">Delete</button>
                {{/ifequal}}
                {{/if}}
                </div>
            </div> --}}
          </div>
        </div>
        {{/each}}
</div>
{{else}}
<p>No products</p>
{{/if}}




      