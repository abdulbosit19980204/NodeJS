<div class="w-75 mx-auto">
   <p class="fs-1">Add products</p>
  

    <form action="/add-products" method="post">

    <div class="form-floating mb-3">
    <input name="title" type="text" class="form-control" id="floatingInput" placeholder="title">
    <label for="floatingInput">Prodcut title</label>
    </div>

    <div class="form-floating mb-3">
    <textarea name="description" class="form-control" placeholder="Description" id="floatingTextarea2" style="height: 100px"></textarea>
    <label for="floatingTextarea2">Description</label>
    </div>

    <div class="form-floating mb-3">
    <input name="image" type="text" class="form-control" id="floatingInput" placeholder="Image">
    <label for="floatingInput">Image</label>
    </div>

    <div class="input-group mb-3">
    <span class="input-group-text bg-light">$</span>
    <div class="form-floating">
        <input name="price" type="number" class="form-control" id="floatingInputGroup1" placeholder="Price">
        <label for="floatingInputGroup1">Price</label>
